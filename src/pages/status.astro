---
import Layout from '../components/layout.astro';
import DescribedLink from '../components/described-link.jsx';
import WarMapLink from '../components/war-map-link.jsx';
import DayOfWar from '../components/day-of-war.jsx';
---

<Layout
  title="Status of the War on Ukraine"
  description="Information on the rapidly changing status of the war in Ukraine and potential war crimes committed"
>
  <main>
    <DayOfWar client:load />  
    <WarMapLink client:load
     linkText="Ukraine War Map"
     description="Interactive map showing the approximate situation of armed forces and controlled regions in Ukraine"
    />
    <DescribedLink
      url="https://kyivindependent.com"
      linkText="The Kyiv Independent"
      description="Independent news organization with frequent updates related to the war"
    />
    <DescribedLink
      url="https://reuters.com/world"
      linkText="Reuters World News"
      description=""
    />
    <DescribedLink
      url="https://www.theguardian.com/us"
      linkText="The Guardian - US edition"
      description=""
    />
    <DescribedLink
      url="https://ukraine.bellingcat.com/"
      linkText="Civilian Harm Database"
      description="Bellingcat's interactive database of civilian harm in Ukraine provides timestamped geo-located data on events in which civilians were harmed in this war"
    />
    <DescribedLink
      url="https://www.icc-cpi.int/Pages/item.aspx?name=20220228-prosecutor-statement-ukraine"
      linkText="International Criminal Court investigation"
        description="Follow the investigation by the International Criminal Court into war crimes committed in the war on Ukraine"
    />
  </main>
</Layout>
