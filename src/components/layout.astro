---
const { title, description, home = false } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/apple-touch-icon.png"
  />
  <link
    rel="icon"
    type="image/svg+xml"
    href="/favicon.svg"
  />
  <link rel="manifest" href="/site.webmanifest" />
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#139cab" />
  <meta name="msapplication-TileColor" content="#5cebdf" />
  <meta name="theme-color" content="#ffffff" />
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-SLQ2W5ZMCK"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-SLQ2W5ZMCK', {
      cookie_flags: 'max-age=7200;Secure;SameSite=None'
    });
  </script>
  <title>{title}</title>

  <style is:global>
    :root {
      --heading: #151a1e;
      --text: #33373b;
      --text-muted: #676c70;
      --primary: #8af;
      --button: #228;
      --lightBorder: #d2e0fe;
      --blue: #55f;
      --white: #fff;
      --yellow: #ffa;
      --dkyellow: #ff5;
    }

    * {
      box-sizing: border-box;
    }

    html,
    body {
      color: var(--white);
      background-color: var(--blue);
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica,
        Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
      font-size: 18px;
      line-height: 1.45;
      margin: 0;
      padding: 0;
    }

    body {
      display: flex;
      flex-direction: column;
      justify-content: center;
      min-height: 100vh;
      padding: 5rem 0 4rem;
    }

    main {
      background: var(--yellow);
      color: var(--text);
      border-bottom: 1px solid var(--lightBorder);
      border-top: 1px solid var(--lightBorder);
      margin-bottom: 0.1rem;
      margin-top: 3rem;
      padding: 2rem max(5vw, 50vw - 60ch / 2);
      width: 100vw;
    }

    .sr-only:not(:focus):not(:active) {
      clip: rect(0 0 0 0);
      clip-path: inset(50%);
      height: 1px;
      overflow: hidden;
      position: absolute;
      white-space: nowrap;
      width: 1px;
    }

    .described-link {
      margin-bottom: .5rem;
      padding: 0 1rem 1rem 1rem;
      border: 1px solid gray;
      border-radius: 10px;
      background-color: var(--white);
    }
    .hidden {
      display: none;
    }

  </style>

  <style>
    .container,
    .footer {
      margin: 0 auto;
      text-align: center;
      width: min(90vw, 900px);
    }

    .heading {
      color: var(--heading);
      font-size: 2.5rem;
      margin: 0;
      text-align: center;
    }

    .footer {
      color: var(--white);
      font-size: 0.75rem;
      margin-top: 4rem;
    }

    .footer a {
      color: inherit;
      text-decoration: none;
    }

    .footer a:focus,
    .footer a:hover {
      text-decoration: underline;
    }
    .backlink a {
      color: var(--dkyellow) 
    }

  </style>
</head>
<body>
  
  <header class="container">
    <h1 class="heading">{title}</h1>

    <p class="description">{description}</p>

    {home !== true && (
      <p class="backlink">
        <a href="/">&larr; back to home</a>
      </p>
    )}
  </header>

  <slot />

  <footer class="footer">
      &copy; 2022 Ukraine Support PDX
  </footer>

</body>
</html>
